---
const moods = [
  { label: 'rad', icon: 'sentiment_very_satisfied', color: 'text-orange-500' },
  { label: 'good', icon: 'sentiment_satisfied', color: 'text-green-500' },
  { label: 'neutral', icon: 'sentiment_neutral', color: 'text-gray-500' },
  { label: 'sad', icon: 'sentiment_dissatisfied', color: 'text-blue-500' },
  { label: 'awful', icon: 'sentiment_very_dissatisfied', color: 'text-black' },
];
---

<div class="flex flex-col items-center justify-evenly min-h-screen -mt-24 pb-36">

  <section class="flex flex-col items-center justify-center -mb-14">
    <h1 class="text-3xl uppercase mb-4">How are you?</h1>
    <div class="flex items-center justify-center space-x-4 text-purple-500 mb-4">
      <div class="flex items-center space-x-2">
        <span class="material-icons">calendar_today</span>
        <span class="underline underline-offset-2">Today, March 29</span>
        <span class="material-icons">arrow_drop_down</span>
      </div>
      <div class="flex items-center space-x-2">
        <span class="material-icons">access_time</span>
        <span class="underline underline-offset-2">4:06 PM</span>
        <span class="material-icons">arrow_drop_down</span>
      </div>
    </div>
  </section>

  <section class="flex flex-col items-center justify-center -mt-14">
  <div class="flex justify-center space-x-4 mb-4">
    {moods.map((mood) => (
      <div key={mood.label} class="text-center">
        <span class={`material-icons ${mood.color} text-6xl`}>{mood.icon}</span>
        <p class="text-lg mt-2">{mood.label}</p>
      </div>
    ))}
  </div>
  <div class="fixed bottom-8 right-8 flex flex-col items-center">
    <button class="bg-purple-500 text-white p-3 rounded-full shadow-lg">
      <span class="material-icons">edit</span>
    </button>
    <p class="mt-2 text-purple-500">Edit Moods</p>
  </div>
  </section>

</div>
