---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
import Nav from "@/components/Nav.astro";
import { supabase } from "@/lib/supabase";
import AuthContext from "@/components/AuthContext.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;

// disable page caching
Astro.request.headers.set("Cache-Control", "no-store");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
    />

    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | ThriveTogether.ai</title>
    <ViewTransitions />
  </head>
  <body>
    <AuthContext />
    <Nav />
    <slot />
  </body><style>
    body {
      background-color: #0e211a; /* A dark blue-gray color */
      /* background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 250 250' xmlns='http://www.w3.org/2000/svg' id='noiseFilter' type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch' width='100%' height='100%' filter='url(%23noiseFilter)'/%3E%3C/svg%3E"),
        linear-gradient(to bottom right, #637f97, #2c2c2c);
      background-blend-mode: overlay; */
      min-height: 100vh;
    }
  </style>
</html>
